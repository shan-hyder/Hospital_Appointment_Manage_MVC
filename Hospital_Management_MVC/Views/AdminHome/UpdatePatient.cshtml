@model Hospital_Management_MVC.Models.PatientByIdSTO

<div class="text-center text-info">
	<h2>Update Patient</h2>
</div>

<form asp-action="UpdatePatient" method="post">

	<input type="hidden" name="Id" value="@Model.Id" />
	<input asp-for="Userid" type="hidden" />

	<div>
		<label for="Id">Id : @ViewBag.Id</label>
	</div>

	<div>
		<label for="Userid">Id : @ViewBag.userid</label>
	</div>

	<div>
		<label for="Name">Name:</label>
		<input type="text" id="Name" class="form-control" name="Name" value="@Model.Name" />
	</div>
	<div>
		<label for="Age">Age:</label>
		<input type="text" class="form-control" id="Age" name="Age" value="@Model.Age" />
	</div>
	<div>
		<label for="DOB">Date of Birth:</label>
		<input type="date" class="form-control" id="DOB" name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")" />
	</div>
	<div>
		<label for="Gender">Gender:</label>
		<select class="form-control" id="Gender" name="Gender">
			<option value="Male" selected="@(Model.Gender == "Male")">Male</option>
			<option value="Female" selected="@(Model.Gender == "Female")">Female</option>
		</select>
	</div>
	<div>
		<label for="Medicalhistory">Medical History:</label>
		<input type="text" class="form-control" id="Medicalhistory" name="Medicalhistory" value="@Model.Medicalhistory" />
	</div>

	<div class="text-center">
		<button class="btn btn-warning text-black">Save Changes</button>
	</div>
</form>
